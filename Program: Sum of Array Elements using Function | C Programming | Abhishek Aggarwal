// Program: write a program that simply takes elements of the array from the user and finds the sum of these elements using function

#include <stdio.h>

int findSum(int arr[], int n) {
    int sum = 0;
    for(int i = 0; i < n; i++) {
        sum = sum + arr[i];
    }
    return sum;
}

int main()
{
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int result = findSum(arr, n);
    printf("Sum of elements = %d\n", result);
    return 0;
}
