// Program: write a program that inputs two arrays and saves the sum of the corresponding elements of these arrays in a third array and prints them..
#include <stdio.h>

int main()
{
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr1[n], arr2[n], result[n];

    printf("Enter elements of first array: \n");
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr1[i]);
    }

    printf("Enter elements of second array: \n");
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr2[i]);
    }

    // logic to get summation of these 2 arrays
    for(int i = 0; i < n; i++){
        result[i] = arr1[i] + arr2[i];
    }

    printf("Sum of corresponding elements:\n");
    for(int i = 0; i < n; i++) {
        printf("%d ", result[i]);
    }

    return 0;
}
